# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{js,jsx,ts,lisp,html,spacemacs,css,scss,json,*rc,yml,hs,re,ml}]
indent_size = 2

[*.{py,js,jsx,ts}]
insert_final_newline = true

[*.py]
max_line_length = 80

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
