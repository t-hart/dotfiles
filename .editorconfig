# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
trim_trailing_whitespace = true

[*.{js,jsx,ts,lisp,html,spacemacs,css,scss,json,*rc,yml,hs,re,ml,vue,sh,bat,glsl}]
indent_size = 2

[*.{cs,cpp,rs,py,java}]
indent_size = 4

[*.py]
max_line_length = 80

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
